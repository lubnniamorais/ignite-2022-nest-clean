{
  "extends": "@rocketseat/eslint-config/node",
  "rules": {
    "prettier/prettier": ["error", {
      "printWidth": 80,
      "tabWidth": 2,
      "endOfLine": "auto",
      "singleQuote": true,
      "trailingComma": "all",
      // "arrowParens": "always",
      "arrowParens": "avoid",
      "semi": true // PARA COLOCAR O ; NO FINAL, EM INGLÃŠS semicolon
    }],
    "camelcase": "off",
    "no-useless-constructor": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "@typescript-eslint/no-explicit-any":"off",
    "no-new": "off"
  }
  // "jest": true
}